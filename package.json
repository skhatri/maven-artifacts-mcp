{
  "name": "maven-artifacts-mcp",
  "version": "0.1.0",
  "description": "MCP Server for resolving Maven2 module versions with caching and logging",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "maven-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "link:local": "npm run build && npm link",
    "setup:cursor": "npm run build && npm link && echo 'Ready for Cursor! Use maven-mcp command.'",
    "test:server": "npm run build && node dist/index.js"
  },
  "keywords": [
    "mcp",
    "maven",
    "version-resolver",
    "typescript"
  ],
  "author": "skhatri",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
